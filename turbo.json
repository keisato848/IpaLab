{
    "$schema": "https://turbo.build/schema.json",
    "globalPassThroughEnv": [
        "COSMOS_DB_CONNECTION",
        "APPLICATIONINSIGHTS_CONNECTION_STRING",
        "GEMINI_API_KEY",
        "AUTH_SECRET",
        "AUTH_GITHUB_ID",
        "AUTH_GITHUB_SECRET",
        "AUTH_GOOGLE_ID",
        "AUTH_GOOGLE_SECRET"
    ],
    "tasks": {
        "build": {
            "dependsOn": [
                "^build"
            ],
            "outputs": [
                ".next/**",
                "dist/**",
                "build/**"
            ]
        },
        "test": {
            "dependsOn": [
                "build"
            ],
            "outputs": [],
            "inputs": [
                "src/**/*.tsx",
                "src/**/*.ts",
                "test/**/*.ts",
                "test/**/*.tsx"
            ]
        },
        "lint": {
            "outputs": []
        },
        "dev": {
            "cache": false,
            "persistent": true
        },
        "clean": {
            "cache": false
        }
    }
}