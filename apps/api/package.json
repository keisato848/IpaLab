{
    "name": "api",
    "version": "0.0.0",
    "description": "Azure Functions API",
    "main": "dist/src/functions/*.js",
    "scripts": {
        "build": "tsup && npm run copy-data",
        "copy-data": "cpx \"../../packages/data/data/questions/**\" dist/data/questions",
        "watch": "tsc -w",
        "clean": "rimraf dist",
        "prestart": "npm run clean && npm run build",
        "start": "func start --port 7074",
        "dev": "npm start",
        "test": "echo \"No tests yet...\"",
        "lint": "eslint ."
    },
    "dependencies": {
        "@azure/cosmos": "^4.9.0",
        "@azure/functions": "^4.0.0",
        "@types/node": "^20.0.0",
        "cpx": "^1.5.0",
        "front-matter": "^2.1.0",
        "rimraf": "^5.0.0",
        "tsup": "^8.3.5"
    },
    "devDependencies": {
        "@ipa-lab/config": "*",
        "@ipa-lab/shared": "*",
        "eslint": "^8.0.0",
        "rimraf": "^5.0.0",
        "tsup": "^8.5.1",
        "typescript": "^5.0.0"
    }
}